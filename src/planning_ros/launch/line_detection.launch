<?xml version="1.0"?>
<launch>
  <!-- Line Detection Node -->
  <node name="line_detection" pkg="planning_ros" type="line_detection_node" output="screen">
    <!-- Hough Transform Parameters -->
    <param name="hough/rho_resolution" value="0.1" />
    <param name="hough/theta_resolution" value="0.01" />
    <param name="hough/min_votes" value="3" />
    <param name="hough/theta_tolerance" value="0.2" />

    <!-- Cone Filtering Parameters -->
    <param name="cones/max_distance" value="50.0" />
    <param name="cones/min_distance" value="2.0" />

    <!-- Path Generation Parameters -->
    <param name="path/interval" value="0.1" />
    <param name="path/max_distance" value="75.0" />

    <!-- Vehicle Parameters -->
    <param name="vehicle/imu_offset_x" value="1.88" />

    <!-- Finish Line Detection -->
    <param name="finish/threshold" value="2.0" />

    <!-- Topic Names -->
    <param name="topics/cone" value="/cone_position" />
    <param name="topics/car_state" value="/Carstate" />
    <param name="topics/path" value="/line_planned_path" />
  </node>
</launch>
